<h1>All paths</h1>
<%= link_to "New Path", new_path_path %>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>O&D redirect to same article?</th>
            <th>Number of Intermediate articles</th>
        </tr>
    </thead>
    <tbody>
        <% @paths.each do |path| %>
            <tr>
                <td>
                <%= link_to path.id, path %>
                </td>
                <td>
                <%= path.origin %>
                </td>
                <td>
                <%= path.destination %>
                </td>
                <td>
                <%= (path.links_to_same_article) ? "Yes": "No" %>
                </td>
                <td>
                <%= (path.intermediate.length > 0) ? (path.intermediate.length) : "None" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>